<Window x:Class="ATMApplication.User_Interface.Menu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATMApplication.User_Interface"
        mc:Ignorable="d"
        Title="Menu" Height="400" Width="600">
    <Grid>
        <TextBlock Name="Greeting" FontSize="16" FontWeight="Bold" Margin="20,20,0,0"/>
        <TextBlock Name="Information" FontSize="14" Margin="20,50,0,0"/>
        <Button Content="Check Balance" VerticalAlignment="Top" Margin="20,100,0,0" Click="CheckBalanceButton_Click" Width="200"/>
        <Button Content="Deposit" VerticalAlignment="Top" Margin="20,150,0,0" Click="DepositButton_Click" Width="200"/>
        <Button Content="Withdraw" VerticalAlignment="Top" Margin="20,200,0,0" Click="WithdrawButton_Click" Width="200"/>
        <Button Content="View Transactions" VerticalAlignment="Top" Margin="20,250,0,0" Click="TransactionsButton_Click" Width="200"/>
        <Button Content="Logout" VerticalAlignment="Top" Margin="20,300,0,0" Click="LogoutButton_Click" Width="200"/>
    </Grid>
</Window>
